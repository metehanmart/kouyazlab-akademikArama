@model IEnumerable<akademikArama.Models.EklemeSayfasiModel>
@{
    ViewBag.Title = "EklemeSayfasi";
}

<h2>EklemeSayfasi</h2>

<div class="ortala">
    @using (Html.BeginForm("EklemeSayfasi", "Admin", FormMethod.Post))
    {
        @Html.TextBox("ArastirmaciID", "", new { placeholder = "Arastirmaci ID" })
        @Html.TextBox("ArastirmaciAdi", "", new { placeholder = "Araştırmacı Adı" })
        @Html.TextBox("ArasirmaciSoyadi", "", new { placeholder = "Araştırmacı Soyadı" })
        @Html.TextBox("YayinAdi", "", new { placeholder = "Yayın Adı" })
        @Html.TextBox("YayinYili", "", new { placeholder = "Yayın Yılı" })
        @Html.TextBox("YayinTuru", "", new { placeholder = "Yayın Türü" })
        <input type="submit" value="Ekle" />
    }
</div>

<div class="tablo" , id="arastirmacilarListesi">
    <table class="table table-striped">
        <caption>Arastırmacılar Listesi</caption>
        <thead>
            <tr>
                <th>Arastırmacı ID</th>
                <th>Arastırmacı Adı</th>
                <th>Arastırmacı Soyadı</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>Kayıt Yok</td>
                </tr>
            }
            else
            {
                foreach (var i in Model)
                {
                    <tr>
                        <td>@i.ArastirmaciID</td>
                        <td>@i.ArastirmaciAdi</td>
                        <td>@i.ArasirmaciSoyadi</td>
                    </tr>
                }
            }
            @if (ViewBag.Message != null)
            {
                <tr>
                    <td>@ViewBag.Message</td>
                </tr>
            }
        </tbody>

    </table>
</div>
@using akademikArama.Models
@model Kullanici
@{
    ViewBag.Title = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<div>
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.TextBoxFor(m => m.EMail, new { placeholder = "E-MAİL", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { placeholder = "ŞİFRE", @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Giriş Yap" id="Submit" class="btn btn-default" />
        </div>
        <div class="uyariMesaji">
            @if (ViewBag.Yanlis != null && ViewBag.Yanlis != "")
            {
                <p>@ViewBag.Yanlis</p>
            }
        </div>
    }
</div>
